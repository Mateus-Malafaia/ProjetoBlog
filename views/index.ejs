<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include("partials/header") %>
    <main class="container">
      <div class="layout">
        <!-- Formulário -->
        <div class="card post-form">
          <form action="/post" method="post">
            <input type="text" name="title" placeholder="Título" required />
            <textarea name="content" placeholder="Conteúdo" required></textarea>
            <button type="submit">Postar</button>
          </form>
        </div>

        <!-- Lista de posts -->
        <div class="posts-grid">
          <% posts.forEach(post => { %>
          <article class="post-card">
            <h2><a href="/post/<%= post.id %>"><%= post.title %></a></h2>
            <p class="meta"><%= post.createdAt.toLocaleString() %></p>
            <p>
              <%= post.content.length > 200 ? post.content.substring(0,200) +
              '...' : post.content %>
            </p>
            <div class="post-actions">
              <a href="/post/<%= post.id %>/edit" class="link">Editar</a>
              <form
                action="/post/<%= post.id %>/delete"
                method="post"
                style="display: inline"
              >
                <button
                  type="submit"
                  class="btn btn-secondary"
                  onclick="return confirmDelete()"
                >
                  Excluir
                </button>
              </form>
            </div>
          </article>
          <% }) %>
        </div>
      </div>
    </main>
    <%- include("partials/footer") %>
    <script src="/js/scripts.js"></script>
  </body>
</html>
